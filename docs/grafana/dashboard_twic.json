{
  "__inputs": [],
  "__requires": [
    {"type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.x"},
    {"type": "panel", "id": "timeseries", "name": "Time series", "version": "10.x"}
  ],
  "title": "twic Service Overview",
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum(rate(twic_requests_total[5m]))", "legendFormat": "req/s"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(twic_request_latency_seconds_bucket[5m])) by (le))", "legendFormat": "p95"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Abstention Rate",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum(rate(twic_abstentions_total[5m])) / sum(rate(twic_requests_total{path=\"/classify\"}[5m]))", "legendFormat": "abstention"}
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP 429 & 5xx",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {"expr": "rate(twic_http_429_total[5m])", "legendFormat": "429"},
        {"expr": "rate(twic_http_5xx_total[5m])", "legendFormat": "5xx"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Top Score Distribution (mean)",
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum(rate(twic_classify_score_max_sum[5m])) / sum(rate(twic_classify_score_max_count[5m]))", "legendFormat": "mean score"}
      ]
    },
    {
      "type": "timeseries",
      "title": "Top Score >0.9 Ratio",
      "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum(rate(twic_classify_score_max_bucket{le=\"0.95\"}[5m])) / sum(rate(twic_classify_score_max_count[5m]))", "legendFormat": ">0.9 ratio"}
      ]
    }
  ]
}
